pipeline {
    agent {
  label 'Linux-agent1'
  }

    environment {
        PATH="${getmaven()}:${PATH}"
    }
    stages{
        stage("Git Checkout") {
            steps{
                git 'https://github.com/kalyanp89/myweb.git'
            }
        }
        stage("Maven Buils"){
            steps{
                sh 'mvn clean package'
            }
        }
    }
}


// 
def getmaven(){
    def mvnhome = tool name: 'maven3', type: 'maven'
    return "${mvnhome}/bin"
}